@using CommercialAutomation.Models.Classes;
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container">
    <table class="table table-bordered">

        <tr>
            <th>ID</th>
            <th>Kategori Adı</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td style="display:flex; justify-content:center;">
             
                        <a class="btn btn-success" href="/Category/Get/@item.Id">Güncelle</a>
                  
                </td>
                <td>
                   <a class="btn btn-danger" href="/Category/Delete/@item.Id">
                        Sil
                    </a>
                </td>
            </tr>
        }

    </table>

    <a href="/Category/AddCategoryView" class="btn btn-primary">
    
            Kategori Ekle
      
    </a>

</div>